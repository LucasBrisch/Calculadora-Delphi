{$R *.dfm}

procedure TForm3.btn0Click(Sender: TObject);
begin
if resolvido then begin
  num1 := '0';
  result.Caption := '0';
  resolvido := false;
  resultado := '0';
  second := false;
  end else
  if not second then begin
        resultado := resultado + '0';
        num1 := num1 + '0';
        result.Caption := resultado;
  end else begin
        resultado := resultado + '0';
        num2 := num2 + '0';
        result.Caption := resultado;
  end;
end;

