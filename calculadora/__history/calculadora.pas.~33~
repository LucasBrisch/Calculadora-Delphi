procedure TForm3.btnequalsClick(Sender: TObject);
var
  res: Integer;
begin
  if operador = 'soma' then
  begin
    res := StrToInt(num1) + StrToInt(num2);
    result.Caption := IntToStr(res);
    num1 := IntToStr(res);
    num2 := '';
    resolvido := true;
    second := false;
  end;
end;

procedure TForm3.btnplusClick(Sender: TObject);
begin
  if resolvido then
  begin
    // Continua a partir do resultado anterior
    resultado := num1 + '+';
    result.Caption := resultado;
    resolvido := false;
    second := true;
    operador := 'soma';
    num2 := '';
  end
  else
  begin
    resultado := resultado + '+';
    result.Caption := resultado;
    second := true;
    operador := 'soma';
  end;
end;


procedure TForm3.FormCreate(Sender: TObject);
begin
    second := False;
end;

end.
